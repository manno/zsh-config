# Overrides all other LC_*, most useful to switch off any i18n-environment-variable
# dependent behaviour?
#LC_ALL="C"
export LC_ALL=

# allows using the individual LC_* variables
export LANG="en_US.UTF-8"

# LC_ADDRESS - Address formats and location information.
export LC_ADDRESS="de_DE.UTF-8"

# LC_COLLATE - Collation order.
LC_COLLATE=C

# LC_CTYPE - Character classification and case conversion.
#LC_CTYPE=

# LC_DATE - ???
export LC_DATE=de_DE.UTF-8

# LC_IDENTIFICATION - Metadata about the locale information.
#LC_IDENTIFICATION="en_US.UTF-8"

# LC_MESSAGES - Formats of informative and diagnostic messages and interactive responses.
#LC_MESSAGES=

# LC_MEASUREMENT - Measurement units (Metric or Other).
export LC_MEASUREMENT="de_DE.UTF-8"

# LC_MONETARY - Monetary formats.
export LC_MONETARY="de_DE.UTF-8"

# LC_NAME - Name formats.
export LC_NAME="de_DE.UTF-8"

# LC_NUMERIC - Non-monetary numeric formats.
export LC_NUMERIC="de_DE.UTF-8"

# LC_PAPER - Paper size.
export LC_PAPER="de_DE.UTF-8"

# LC_TELEPHONE - Telephone number formats.
export LC_TELEPHONE="de_DE.UTF-8"

# LC_TIME - Date and time formats.
export LC_TIME="de_DE.UTF-8"

# undocumented?
export LC_TYPE="en_US.UTF-8"
